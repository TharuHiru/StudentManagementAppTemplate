<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:background="#85BDCA" android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp" tools:context=".MainActivity">
    <!--  App Header Image  -->
    <ImageView
        android:id="@+id/imgHeader"
        android:layout_width="240dp"
        android:layout_height="166dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="50dp"
        android:contentDescription="Student Management Banner"
        android:scaleType="fitCenter"
        android:src="@drawable/propic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--  App Title  -->
    <TextView android:id="@+id/tvTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Student Management System" android:textSize="22sp" android:textStyle="bold" android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@id/imgHeader" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  Add Student Button  -->
    <Button android:id="@+id/buttonAddStudent" android:layout_width="0dp" android:layout_height="180px" android:text="Add Student" android:textColor="@android:color/white" android:layout_marginTop="50dp" android:layout_marginLeft="40px" android:layout_marginRight="40px" android:backgroundTint="#0B4E71" app:layout_constraintTop_toBottomOf="@id/tvTitle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <!--  View Students Button  -->
    <Button android:id="@+id/buttonViewStudents" android:layout_width="0dp" android:layout_height="180px" android:text="View Students" android:textColor="@android:color/white" android:layout_marginLeft="40px" android:layout_marginRight="40px" android:layout_marginTop="16dp" android:backgroundTint="#0B4E71" app:layout_constraintTop_toBottomOf="@id/buttonAddStudent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>